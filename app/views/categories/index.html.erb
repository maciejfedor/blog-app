<h1 class = "text-center p-3">Categories</h1>


<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
<% @categories.each do |category| %>
  <div class="row justify-content-md-center">
 <div class="col-4 mt-4">
<div class="card text-center shadow  mb-5 bg-white rounded">
  <div class="card-body ">
    <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success text-decoration-none" %></h5>
    <p class="card-text"><%=pluralize(category.articles.count, "article") %></p>
    </div>
</div>
</div>
</div>
<% end %>
</div>
<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>