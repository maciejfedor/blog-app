
<h1 class = "text-center p-3">Create a new category</h1>

<div class="container">
<div class=" row justify-content-center ">
<div class="col-9">
<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class:  "shadow  mb-3 bg-success bg-gradient rounded p-3", data: { turbo: false }, local: true)  do |f| %>
  <div class = "form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
    <div class = "col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name" %>
    </div>
  </div>

 

  <div class = "form-group justify-content-center d-block text-center p-3">
    <%= f.submit  class: "btn btn-outline-light btn-lg" %>
    </div>

  <% end %>
  </div>
  <%= link_to '[Cancel and return to articles listing]', articles_path(@article), class: "text-center  text-decoration-none" %>
  </div>
  </div></div>

