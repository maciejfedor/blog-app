<h2 class = "text-center p-3"><%= @article.title %></h2>

<div class="container">


  <div class="row justify-content-md-center">
 <div class="col-8 mt-4">
<div class="card text-center shadow mb-5 bg-white rounded">
  <h5 class="card-header fst-italic">by <%= @article.user.username if @article.user %>
  <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
  <% if @article.categories.any? %>

  <div class="mt-2"><%= render @article.categories %></div>

  <% end %>
  
  </h5>


  <div class="card-body ">
   
 
    <div class="card-text text-start"><%= simple_format(@article.description) %></div>
    <div class = "d-flex justify-content-center flex-md-row gap-3">
    <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info"  %>
    <%= button_to 'Delete', article_path(@article), method: :delete,  data: {confirm: "Are you sure ?"} , "data-turbo": false, class: "btn btn-outline-danger"  %> 
    <% end %>
    </div>
    

  </div>
  <div class = "card-footer text-muted"></div>
</div>
</div>
</div>

</div>

<p class = "text-center  text-decoration-none" ><%= link_to '[Create new article]', new_article_path %></p>