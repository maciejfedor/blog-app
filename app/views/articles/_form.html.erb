<div class="container">
<div class=" row justify-content-center ">
<div class="col-9">
<%= render 'shared/errors', obj: @article %>
<%= form_with(model: @article, class:  "shadow  mb-3 bg-success bg-gradient rounded p-3", data: { turbo: false }, local: true)  do |f| %>
  <div class = "form-group row">
    <%= f.label :title, class: "col-2 col-form-label text-light" %>
    <div class = "col-10">
    <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Article title" %>
    </div>
  </div>

  <div class = "form-group row mt-4">
  <%= f.label :description, class: "col-2 col-form-label text-light" %>
  <div class = "col-10">
  <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Article description" %>
  </div>
  </div>

  <div class = "form-group row mt-4">
  <%= f.label :category, class: "col-2 col-form-label text-light" %>
  <div class = "col-10">
  <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, size: 3, class: "form-select shadow rounded "}) %>
  </div>
  </div>

  <div class = "form-group justify-content-center d-block text-center p-3">
    <%= f.submit  class: "btn btn-outline-light btn-lg" %>
    </div>

  <% end %>
  </div>
  <%= link_to '[Cancel and return to articles listing]', articles_path(@article), class: "text-center  text-decoration-none" %>
  </div>
  </div></div>